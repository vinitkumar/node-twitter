extends ../layouts/default

block content
    .col-md-4.col-md-offset-3.pull-right
      .login-container
        h1 Login using GitHub
          h3
            a(href="/auth/github")
              i(class="fa fa-github-alt fa-5x")

      if (typeof errors !== 'undefined')
          .fade.in.alert.alert-block.alert-error
            a.close(data-dismiss="alert", href="javascript:void(0)") x
            ul
              each error in errors
                li = error.type

        block auth
