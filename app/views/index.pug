extends layouts/default

block content
  .row.twitter-container
    .col-xl-3.col-lg-4.first-column
      .logged-user
        .row
          .col-4.image-column
            img(class='profile-image', src=req.user.github.avatar_url)
          .col-8.information-column
            a(href="/users/" + req.user.id)
              h4 #{req.user.name}
            .user-stats
              ul
                li
                  span.stat-title Tweets:
                  span
                    a(href="/users/" + req.user.id) #{tweetCount}
                li
                  span.stat-title Following:
                  span 
                    a(href="/users/" + req.user._id + "/following")  #{followingCount}
                li
                  span.stat-title Followers: 
                  span
                    a(href="/users/" + req.user._id + "/followers")  #{followerCount}
          .col-md-12.user-stats-column.user-stats
            ul
              li
                span.stat-title Tweets:
                span
                  a(href="/users/" + req.user.id) #{tweetCount}
              li
                span.stat-title Following:
                span 
                  a(href="/users/" + req.user._id + "/following")  #{followingCount}
              li
                span.stat-title Followers: 
                span
                  a(href="/users/" + req.user._id + "/followers")  #{followerCount}
      .useful-links
        include components/useful-links
      .recent-visits
        include components/recent-visits
    .col-xl-6.col-lg-8.second-column
      include components/tweets
      - if (pages > 1)
        nav(aria-label='Page navigation example').pagination-container
          ul.pagination
            != pagination


    .col-xl-3.col-lg-4.third-column
      .recent-visits.col-xs-6.col-md-12
        include components/recent-visits
      .useful-links.col-xs-6.col-md-12
        include components/useful-links
